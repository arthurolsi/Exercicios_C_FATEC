#include <stdio.h>

// Par-impar vetor

int main()
{
    int vetorA[6], vetorB[6], vetorC[6], qtdP = 0, qtdI = 0;
    int i = 0;
    
    printf("Digite 6 valores para o vetor\n");
    for (i = 0; i < 6; i++){
        scanf("%d", &vetorA[i]);
        
        if (vetorA[i] % 2 == 0){
            vetorB[i] = vetorA[i];
            vetorC[i] = 0;
            qtdP++;
        }
        else{
            vetorB[i] = 0;
            vetorC[i] = vetorA[i];
            qtdI++;
        }
    }
    
    printf("\n%d Números pares: ", qtdP);
    for (i = 0; i < 6; i++){
        printf("%d-", vetorB[i]);
    }
    
   printf("\n%d Números impares: ", qtdI);
    for (i = 0; i < 6; i++){
        printf("%d-", vetorC[i]);
    }
    
    return 0;
}


