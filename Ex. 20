#include <stdio.h>
#include <math.h>

// Segundo grau sem function
// Atividade realizada em 25/05/2022

// 1 3 -4         =      1 e -4
int main()
{
    int a, b, c, delta, x1, x2, raiz;
    
    printf("Informe a, b e c\n");
    scanf("%d %d %d", &a, &b, &c);
    
    
    delta = (b * b) -4 * a * c;
    printf("\nDelta = %d", delta);
    
    raiz = sqrt(delta);
    x1 = ((b * -1) + raiz) / (2 * a);
    printf("\nX1 = %d", x1);

    x2 = ((b * -1) - raiz) / (2 * a);
    printf("\nX2 = %d", x2);
    return 0;
}
