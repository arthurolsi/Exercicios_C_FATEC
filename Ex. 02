#include <stdio.h>

// 2) Fazer um programa que mostre os 10 primeiros numeros pares
// Atividade realizada em 10/05/2022

int main()
{
    int i = 0;
    int contador = 0;
    
    printf("Primeiros 10 n√∫meros pares");
    
    for (i = 0; contador < 10; i++)
    {
        if (i % 2 == 0)
        {
            printf("\n %d", i);
            contador++;
        }
        
    }
        
    return 0;
}

