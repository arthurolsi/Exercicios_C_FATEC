#include <stdio.h>

// Comparação e diferença
// Atividade realizada em 27/02/2023

int main()
{
    int x, y, maior, menor, resultado;
    
    printf("Informe um número \n");
    scanf("%d",&x);
    
    printf("Informe mais um número \n");
    scanf("%d",&y);
    
    if (x > y){
        maior = x;
        menor = y;
    }
    else if (x == y){
        printf("São iguais! \n");
    }
    else{
        maior = y;
        menor = x;
    }
    
    //
    
    printf("O resultado da diferença do maior valor pelo menor é:  \n");
    resultado = maior - menor;
    printf("%d", resultado);
    

    return 0;
}

