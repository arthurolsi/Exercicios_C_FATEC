#include <stdio.h>

// Empréstimo bancário
// Atividade realizada em 15/06/2022

int main()
{
    float saldoMedio, emprestimoTotal;
    
    printf("Informe o seu saldo médio ");
    scanf("%f", &saldoMedio);
    
    if (saldoMedio < 350){
        emprestimoTotal = saldoMedio * 0.10;
    }
    else if (saldoMedio >= 350 && saldoMedio < 600){
        emprestimoTotal = saldoMedio * 0.20;
    }
    else if (saldoMedio >= 600 && saldoMedio < 850){
        emprestimoTotal = saldoMedio * 0.35;
    }
    else{
        emprestimoTotal = saldoMedio * 0.55;
    }
    
    printf("Seu saldo médio é de: %.2f", saldoMedio);
    printf("\nO empréstimo máximo é de: %.2f", emprestimoTotal);

    return 0;
}

